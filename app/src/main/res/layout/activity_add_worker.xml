<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".Activities.AddWorkerActivity"
    android:background="@drawable/background_colour">



    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_colour">


        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/addWorker_firstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="First Name"
            android:textColorHint="@color/my_white"
            app:met_textColor="@color/my_white"
            app:met_textColorHint="@color/my_white"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/addWorker_lastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Last Name"
            app:met_textColor="@color/my_white"
            app:met_textColorHint="@color/my_white"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/addWorker_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            app:met_textColor="@color/my_white"
            app:met_textColorHint="@color/my_white"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/addWorker_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            app:met_textColor="@color/my_white"
            app:met_textColorHint="@color/my_white"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/addWorker_phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Phone Number"
            app:met_textColor="@color/my_white"
            app:met_textColorHint="@color/my_white"/>
        <Spinner
            android:id="@+id/addWorker_permission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"/>

    </LinearLayout>

    <Button
        android:id="@+id/addWorker_btn"
        android:layout_margin="16dp"
        android:background="@drawable/button_capsule"
        android:text="Register"
        android:textSize="20sp"
        android:textColor="@color/my_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/addWorker_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible" />


</LinearLayout>